<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/receiver_texts_layout"
        android:text="Receiver texts..."
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/amaranth"
        android:textStyle="bold"
        android:textSize="14dp"
        android:padding="10dp"
        android:id="@+id/receiver_text_"
        android:textColor="@color/black"
        />

    <TextView
        android:id="@+id/sender_text_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/sender_text_layout"
        android:fontFamily="@font/amaranth"
        android:padding="10dp"
        android:text="Sender texts..."
        android:textColor="@color/black"
        android:textSize="14dp"
        android:textStyle="bold" />
</RelativeLayout>